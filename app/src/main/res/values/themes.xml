<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PracticaDesign" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Tema del Splash Screen nativo -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <!-- Fondo completamente blanco -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <!-- Ícono del splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_itch_wrapper</item>

        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Tema posterior -->
        <item name="postSplashScreenTheme">@style/Theme.PracticaDesign</item>
    </style>

</resources>