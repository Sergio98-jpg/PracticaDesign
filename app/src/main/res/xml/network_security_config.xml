<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!--
            Permite el tráfico HTTP (sin cifrar) explícitamente
            solo para estas dos direcciones:
            1. La IP especial del emulador para localhost.
            2. La dirección de loopback estándar.
        -->
        <domain includeSubdomains="true">192.168.0.19</domain>
<!--        <domain includeSubdomains="true">10.154.219.198</domain>-->
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
